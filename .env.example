# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 【1】バックエンドサービス（Railway / Render / Fly.io）に設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# Neon のダッシュボードからコピーした接続文字列をそのまま貼り付けるだけでOKです。
# DataSourceConfig.java が自動でJDBC形式に変換します。
#
DATABASE_URL=postgresql://neondb_owner:パスワード@ep-xxx.ap-southeast-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 【2】Vercel（フロントエンド）に設定
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# バックエンドサービスのデプロイ後に発行される URL を設定します。
# 例: Railway なら https://bistro-lumiere-production.up.railway.app
#     Render なら  https://bistro-lumiere.onrender.com
#
BACKEND_API_URL=https://あなたのバックエンドサービスURL

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 【参考】ローカル開発時の設定（backend/.env.local など）
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# ローカルでも Neon を使いたい場合はそのまま設定できます。
# 完全ローカルにする場合は PostgreSQL をインストールしてURLを変更してください。
#
# DATABASE_URL=postgresql://neondb_owner:パスワード@ep-xxx.neon.tech/neondb?sslmode=require
